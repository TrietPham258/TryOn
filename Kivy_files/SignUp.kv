#:kivy 2.1.0
#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import get_color_from_hex kivy.utils.get_color_from_hex


<UI>
    Screen:
        name: "screen2"
        canvas:
            Color:
                rgba: (48/255, 68/225, 139/255, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        MDCard:
            size_hint: 1, .8
            pos_hint: {'center_x': .5, 'center_y': .5}
            elevation: 3
            padding: 25
            spacing: 35
            orientation: 'vertical'
            adaptive_height: True

            canvas:
                Color:
                    rgba: (229/255, 224/255, 250/255, .9)
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                text: "REGISTER"
                halign: 'center'
                size_hint_y: None
                # Position
                height: self.texture_size[1]
                font_size: '30dp'
                adaptive_height: True
                color: get_color_from_hex('#706b42')

            FirstInput:
                id: signup_user
                hint_text: "username"
                icon_right: "account"
                # Position
                pos_hint: {'center_x': .5, 'center_y': .8}
                max_text_length: 15

            FirstInput:
                id: signup_password
                hint_text: "password"
                icon_right: "eye-off"
                password: True
                pos_hint: {'center_x': .5}
                max_text_length: 20

            FirstInput:
                id: repeat_password
                hint_text: "repeat password"
                icon_right: "eye-off"
                password: True
                pos_hint: {'center_x': .5}
                multiline: False
                max_text_length: 20

            FirstButton:
                text: "CREATE ACCOUNT"
                on_release: 
                    if app.create_account(signup_user, signup_password, repeat_password): \
                    app.announcement("Account Created")
            
            FirstButton:
                text: "BACK TO LOGIN"
                font_size: 15
                pos_hint: {'center_x': .5}
                on_release: root.current = "screen1"
            
            Widget: # Empty space to push the above widgets upward
                size_hint_y: None
                height: 10
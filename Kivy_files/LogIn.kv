#:kivy 2.1.0
#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import get_color_from_hex kivy.utils.get_color_from_hex


<UI>
    Screen:
        name: "screen1"
        canvas:
            Color:
                rgba: (48/255, 68/225, 139/255, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        MDCard: 
            size_hint: 1, .8
            pos_hint: {'center_x': .5, 'center_y': .5}
            elevation: 3
            padding: '25dp'
            spacing: '35dp'
            orientation: 'vertical'
            adaptive_height: True

            canvas:
                Color:
                    rgba: (229/255, 224/255, 250/255, .9)
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                id: label
                text: "WELCOME"
                halign: 'center'
                size_hint_y: None
                # Position
                height: self.texture_size[1]
                size_hint: 1, 1
                font_size: dp(30)
                adaptive_height: True
                color: get_color_from_hex('#706b42')

            FirstInput:
                id: user
                hint_text: "username"
                icon_right: "account"

                # Position
                pos_hint: {'center_x': .5, 'center_y': .8}
                max_text_length: 15
                
            FirstInput:
                id: password
                hint_text: "password"
                icon_right: "eye-off"
                password: True
                pos_hint: {'center_x': .5}

            FirstButton:
                text: "LOG IN"
                on_release: 
                    if app.logger(user, password): \
                    app.root.current = "screen3"

            FirstButton:
                text: "SIGN UP"
                on_release: app.reset_text_box() # Reset Log In text
                on_release: root.current = "screen2"
            
            Widget: # Empty space to push the above widgets upward
                size_hint_y: None
                height: 50

                
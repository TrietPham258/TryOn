#:kivy 2.1.0
#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import get_color_from_hex kivy.utils.get_color_from_hex


<ClothesItemCheck@MDBoxLayout>:
    active: False
    adaptive_height: True

    MDCheckbox:
        active: root.active
        size_hint: None, None
        size: dp(48), dp(48)
        pos_hint: {"center_y": .5}
        canvas.before:
            Color:
                rgb: 0, 0, 0, 1
            Line:
                width: 1.2
                rectangle: self.x + 14.1, self.y + 14.3, self.width - 28.9, self.height - 28.9

        on_active: app.ck_select_orders(self.active)


<FinalLabel@MDLabel>
    color: 0, 0, 0, 1   
    font_size: 15


<DesLabel@MDLabel>
    color: 0, 0, 0, 1   
    font_size: 13
    minimum_width: 1


<Product>
    size_hint: 1, None
    height: 150
    source: ""
    text: ""

    # See the outline of a layout
    canvas.before:
        Color:
            rgba: 1, 0, 0, 0
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    MDRelativeLayout:
        size_hint: 1, 1

        canvas.before:
            Color:
                rgba: 0, 1, 0, 0
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height

        MDCheckbox:
            id: product_check
            active: False
            size_hint: None, None
            size: dp(48), dp(48)
            pos_hint: {"y": .75}
            canvas.before:
                Color:
                    rgb: 0, 0, 0, 1
                Line:
                    width: 1.2
                    rectangle: self.x + 14.1, self.y + 14.3, self.width - 28.9, self.height - 28.9

            on_active:
                if quantity_input.text == "": \
                self.active = False 
                if quantity_input.text == "": \
                app.announcement("Input the quanity first") 
                if quantity_input.text: \
                app.ck_select_orders(self.active, product_name.text, quantity_input.text)


        FinalLabel:
            id: product_name
            text: root.text
            pos_hint: {'x': .12, 'top': 1.4}
        
        Sample:
            id: clothes
            source: root.source
            pos_hint: {'x': .1, 'top': .8}
        
        DesLabel:
            id: quantity
            text: "Quantity:"
            pos_hint: {'x': 0.3, 'top': 1.2}

        MDTextField:
            id: quantity_input
            font_size: 13
            mode: 'round'
            multiline: False
            pos_hint: {'top': .81}
            pos: quantity.pos[0] + 55, self.pos[1]
            size_hint_x: None
            width: 50
            halign: 'center'
            valign: 'center'

            fill_color_normal: get_color_from_hex('#d9d9d9')
            text_color_normal: 0, 0, 0, 1
            

        MDSeparator:
            color: 0, 0, 0, 1
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'top': 0.15}


<Space@Widget>
    size_hint_y: None
    height: root.height


<UI>
    Screen:
        name: "screen6"    
        MDBoxLayout:
            orientation: "vertical"
            
            canvas:
                Color:
                    rgba: (245/255, 243/255, 243/255, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDTopAppBar:
                title: "Checkout page"
                md_bg_color: get_color_from_hex('#30448b')
                specific_text_color: 1, 1, 1, 1
                right_action_items: 
                    [["cart-off", lambda x: app.ck_clear_order(), "Clear order list"],
                    ["basket-check", lambda x: app.ck_confirm_orders(), "Finish order"]]

            MDLabel:
                text: "Order information"
                font_sizez: 20
                valign: "center"
                halign: "center"
                color: (0, 0, 0, 1)
                size_hint: 1, 0.2

            MDSeparator:
                color: 0, 0, 0, 1

            ScrollView:
                #do_scroll_x: False
                #do_scroll_y: True
                MDGridLayout:
                    id: order_list
                    adaptive_height: True
                    cols: 1
                    padding: "10dp"
                    spacing: "10dp"

                    Product:    
                        id: example_product
                        source: ""
                        
            # Bottom Panel
            MDFloatLayout:
                size_hint_y: 0.16
                canvas:
                    Color:
                        rgba: (255/255, 251/255, 254/255, .85)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 0
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height

                MDIconButton:
                    id: homepage
                    icon: 'home-outline'
                    pos_hint: {'x': .05, 'center_y': .5}
                    on_release: root.current = "screen3"
                        
                MDIconButton:
                    id: measurement_page
                    icon: 'pencil-outline'
                    pos_hint: {'x': .3083, 'center_y': .5}
                    on_release: root.current = "screen4"

                MDIconButton:
                    id: fitting_page
                    icon: 'tshirt-crew-outline'
                    pos_hint: {'x': .5667, 'center_y': .5}
                    on_release: root.current = "screen5" 

                MDIconButton:
                    id: checkout_page
                    icon: 'cart'
                    pos_hint: {'x': .825, 'center_y': .5}